@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h2>Engineer Details</h2>
<hr />
<h3>Name: @Html.DisplayFor(model => model.EngineerName)</h3>
<h3>Details: @Html.DisplayFor(model => model.EngineerDetails)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This engineer is not licensed to fix any machines</p>
}
else
{
  <h4>Machines this engineer is licensed to fix:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Machine.MachineName</li>
    @using (Html.BeginForm("DeleteMachine", "Engineers"))
    {
      @Html.Hidden("joinId", @join.EngineerMachineId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}

<p>@Html.ActionLink("Add a Machine", "AddMachine", new { id = Model.EngineerId }) | @Html.ActionLink("Edit Engineer", "Edit", new { id = Model.EngineerId }) | @Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p>