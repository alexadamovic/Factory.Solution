@{
  Layout = "_Layout";
}

@using Factory.Models;
@model Factory.Models.FactoryContext

<div class="row text-center">
  <div class="col-6">
    <h1>Engineers</h1>

    @if (@Model.Engineers.ToList().Count == 0)
    {
      <h3>No engineers have been added yet!</h3>
    }

    @foreach (Engineer engineer in @Model.Engineers.ToList())
    {
      <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", "Engineers", new { id = engineer.EngineerId })</li>
    }

    <h5>@Html.ActionLink("Add new engineer", "Create", "Engineers")</h5>
  </div>

  <div class="col-6">
    <h1>Machines</h1>

    @if (@Model.Machines.ToList().Count == 0)
    {
      <h3>No machines have been added yet!</h3>
    }

    @foreach (Machine machine in @Model.Machines.ToList())
    {
      <li>@Html.ActionLink($"{machine.MachineName}", "Details", "Machines", new { id = machine.MachineId })</li>
    }

    <h5>@Html.ActionLink("Add new machine", "Create", "Machines")</h5>
  </div>
</div>
